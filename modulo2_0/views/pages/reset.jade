		link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800', rel='stylesheet', type='text/css')
	body.open
		// Left Panel
		aside#left-panel.left-panel
			nav.navbar.navbar-expand-sm.navbar-default
				.navbar-header
					button.navbar-toggler(type='button', data-toggle='collapse', data-target='#main-menu', aria-controls='main-menu', aria-expanded='false', aria-label='Toggle navigation')
						i.fa.fa-bars
					a.navbar-brand(href='./') Sistema de Irrigação
					a.navbar-brand.hidden(href='./') SI
				#main-menu.main-menu.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='/home')
								i.menu-icon.fa.fa-dashboard
								| Home
						li.active
							a(href='/graph')
								i.menu-icon.fa.fa-area-chart
								| Gráfico
						h3.menu-title Configurações
						// /.menu-title
						li.menu-item-has-children.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
								i.menu-icon.fa.fa-laptop
								| Configurações
							ul.sub-menu.children.dropdown-menu
								li
									i.fa.fa-puzzle-piece
									a(href='/configuracao') Configuração
								li
									i.fa.fa-remove
									a(href='#') Reset
				// /.navbar-collapse
		// /#left-panel
		// Right Panel
		#right-panel.right-panel
			// Header
			header#header.header
				.header-menu
					.col-sm-7
						a#menuToggle.menutoggle.pull-left
							i.fa.fa.fa-tasks
						.header-left
							h1
								| Sistema de Irrigação
								h1
			// /header
			// Header
			.content.mt-3
				// MEU CONTEUDO				
			// .content
		// /#right-panel
		// Right Panel
